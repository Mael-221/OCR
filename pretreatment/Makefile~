# Simple SDL mini Makefile

CC=gcc

CPPFLAGS= `pkg-config --cflags sdl` -MMD
CFLAGS= -Wall -Wextra -Werror -std=c99 -O3
LDFLAGS=
LDLIBS= `pkg-config --libs sdl` -lSDL_image

all: main

main: main.o pixel_operations.o grayscale.o binari.o contraste.o
main.o : pixel_operations.h grayscale.h binari.h contraste.h

clean:
	${RM} *.o
	${RM} *.d
	${RM} display
	${RM} grayscale

# END
